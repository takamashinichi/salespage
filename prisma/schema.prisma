generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model SalesPage {
  id           Int      @id @default(autoincrement())
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  productName  String
  targetPersona String
  targetAge     String?
  targetGender  String?
  targetOccupation String?
  fear         String
  agitate      String
  solution     String
  features     String
  benefits     String
  mediaExposure String?
  testimonials  String?
  originalPrice String
  specialPrice  String
  bonus         String
  bonusDeadline String?
  scarcity     String
  urgency      String
  salesLetters SalesLetter[]
}

model SalesLetter {
  id          Int       @id @default(autoincrement())
  createdAt   DateTime  @default(now())
  content     String    @db.Text
  salesPage   SalesPage @relation(fields: [salesPageId], references: [id])
  salesPageId Int
}
